{
    "terminal.integrated.env.windows": {
        "path": "${env:GBDK_HOME}\\bin;${env:PATH}",
    },
    "makefile.makePath": "${workspaceFolder}\\.vscode\\wsl_make.bat",
    "files.associations": {
        "*.jk": "javascript",
        "*.rbw": "ruby",
        "dungeon_tiles.h": "c",
        "stdint.h": "c",
        "gb.h": "c",
        "cgb.h": "c",
        "ruins.h": "c",
        "metasprites.h": "c",
        "emu_debug.h": "c",
        "string.h": "c",
        "dude-sheet.h": "c",
        "my_sprites.h": "c",
        "stdbool.h": "c",
        "gbdk-lib.h": "c",
        "provides.h": "c",
        "isr.h": "c",
        "input.h": "c",
        "manager.h": "c"
    },
    "problems.autoReveal": false,
    "debug.terminal.clearBeforeReusing": true,
    "C_Cpp.errorSquiggles": "disabled",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.png": "${capture}.c, ${capture}.h",
        "*.asm": "${capture}.lst, ${capture}.rst, ${capture}.sym, ${capture}.adb, ${capture}.o",
        "*.gb": "${capture}.map, ${capture}.noi, ${capture}.cdb, ${capture}.ihx",
        "*.c": "${capture}.h",
        "Makefile": "*.ps1, *.bat"
    },
    "workbench.editor.customLabels.patterns": {
        "*/res/*": "üñåÔ∏è ${filename}.${extname}",
        "*/obj/*": "‚öôÔ∏è ${filename} - ${extname}",
    },
    "workbench.editor.defaultBinaryEditor": "hexEditor.hexedit"
}